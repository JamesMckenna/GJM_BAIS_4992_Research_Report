@using Microsoft.AspNetCore.Authentication

@if (User.Identity.IsAuthenticated)
{
    <h2>Claims</h2>
    <h3>You are logged in at the Secure Token Server, click the JS Client link to see Single Sign-On in action!</h3>
    <dl>
        @foreach (var claim in User.Claims)
        {
            <dt>@claim.Type</dt>
            <dd>@claim.Value</dd>
        }
    </dl>

    <h2>Properties</h2>

    <dl>
        @foreach (var prop in (await Context.AuthenticateAsync()).Properties.Items)
        {
            <dt>@prop.Key</dt>
            <dd>@prop.Value</dd>
        }



    </dl>
}
else
{
    <h1>Hello, click Login</h1>
}

